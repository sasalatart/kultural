<div class="big-rectangle">
  <%= form_for [@commentable, Comment.new], url: comments_path, remote: true do |f| %>
    <%= f.text_area :content %>

    <%= f.hidden_field :user_id, { value: current_user.id } %>
    <%= f.hidden_field :commentable_id, { value: @commentable.id } %>
    <%= f.hidden_field :commentable_type, { value: @commentable.class } %>

    <div class="action">
      <%= f.submit 'Crear comentario', class: 'button-def' %>
    </div>
  <% end %>
</end>
