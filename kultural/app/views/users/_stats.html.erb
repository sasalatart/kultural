<!-- if user is nil, get user from session 
(only necessary if we'll show stats in home page) -->
<% @user ||= current_user %>
<div class="stats">
  <%= link_to following_user_path(@user) do %>
    <strong class="following">
      <%= @user.following.count %>
    </strong>
    following
  <% end %>
  <%= link_to followers_user_path(@user) do %>
    <strong class="followers">
      <%= @user.followers.count %>
    </strong>
    followers
  <% end %>
  <div class="attendance">
     <%= fa_icon 'calendar-o' %>
     <%= link_to "Attendances", attendances_user_path(@user) %>
  </div>
</div>