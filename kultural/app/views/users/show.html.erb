<div id="user_info">

<div id="user_presentation">
  <div id="user_name_image">
    <%= image_tag("placeholders/profile.png", class: "profile-img") %>
    <div class="user_name_container">
      <%= link_to @user.name, @user %>
    </div>
  </div>
  <%= render 'follow_form' if logged_in? %>
  <%= render 'shared/stats' %>
</div>

<div id="user_about">
  <div><strong>Gender: </strong><%= gender @user %></div>
  <div><strong>Birthday: </strong><%= @user.birthday %></div>
  <div><strong>Mail: </strong><%= @user.mail %></div>
  <div><strong>Phone: </strong><%= @user.phone %></div>
</div>

<!-- <%= link_to 'Edit', edit_user_path(@user) %> -->


</div>

<div id="user_activity">

<section>
  Events

  <%= render @user.events %>

</section>

<section>
  Places that I own

  <%= render @user.places %>
</section>

<section>
  Places where I'm fan

  <%= render @user.favourite_places %>
</section>

<section>
  Last comments

  <%= render @user.comments %>
</section>

<section>
  Groups

  <%= render @user.groups %>
</section>

</div>
