<div id="profile-info">
  <%= render 'shared/profiles/presentation', owner: @user %>
  <%= render 'follow_form' if logged_in? %>
  <%= render 'stats' %>

  <div class="user-about">
    <table class="info-table">
      <tr>
        <td><strong>Gender: </strong></td>
        <td><%= gender @user %></td>
      </tr>
      <tr>
        <td><strong>Birth Date: </strong></td>
        <td><%= @user.birthday %></td>
      </tr>
      <tr>
        <td><strong>Mail: </strong></td>
        <td><%= @user.mail %></td>
      </tr>
      <tr>
        <td><strong>Phone: </strong></td>
        <td><%= @user.phone %></td>
      </tr>
    </table>
  </div>

  <% if @user.groups.count > 0 %>
  <div class="container normal-container">
    <div><strong>My groups:</strong></div>
    <%= render @user.groups %>
  </div>
  <% end %>
</div>

<%= render 'shared/profiles/activity', owner: @user %>
