<% @title ||= 'Events' %> 
<div>
  <h1 class="center-align"> 
    <%= @title %> 
    <% unless @event.nil? %>
    <%= link_to @event.name, @event %>
    <% end %>
  </h1>

  <% if logged_in? %>
  <%= button_to 'New event', new_event_path,
  method: :get, class: 'button-def' %>
  <% end %>

</div>
<div class="table-container">
  <table>
    <thead>
      <tr>
        <th>Event</th>
        <th>Description</th>
        <th>Date</th>
        <th>Price</th>
        <th>Owner</th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= truncate event.description, length: 140, separator: ' ' %></td>
        <td><%= event.date %></td>
        <td><%= number_to_currency event.price, precision: 0 %></td>
        <td><%= render event.owner %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>