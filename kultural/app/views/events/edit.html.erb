<h1 class="center-align">
  Editing <%= link_to @event.name, edit_event_path(@event) %>
</h1>

<%= render 'form' %>

<div class="form center">
  <fieldset class="borders">
    <legend>Delete event</legend>
    <div class="contents">
      <div class="field">
        <%= button_to 'Delete event', @event, method: :delete, data: { confirm: 'Are you sure?' }, class: ['button', 'button-del'] %>
      </div>
    </div>
  </fieldset>
</div>
