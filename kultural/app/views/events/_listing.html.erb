<div class="table-container">
  <table>
    <thead>
      <tr>
        <th>Event</th>
        <th>Description</th>
        <th>Date</th>
        <th>Price</th>
        <th>Owner</th>
      </tr>
    </thead>

    <tbody>
      <% events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= truncate event.description, length: 140, separator: ' ' %></td>
        <td><%= event.date.strftime("%d/%m/%Y %l:%M%p") %></td>
        <td><%= number_to_currency event.price, precision: 0 %></td>
        <td><%= render event.owner %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
