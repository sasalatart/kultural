<% if rateable.ratings.count > 0 %>
  <span style="color:orange">
  <% avg = rateable.ratings.average(:value) %>
  <% full_stars = avg.truncate %>
  <% half_stars = avg > full_stars ? 1 : 0 %>
  <% empty_stars = 10 - full_stars - half_stars %>
  
  <% full_stars.times do %>
    <%= fa_icon 'star' %>
  <% end %>
  <% half_stars.times do %>
    <%= fa_icon 'star-half-o' %>
  <% end %>
  <% empty_stars.times do %>
    <%= fa_icon 'star-o' %>
  <% end %>
  </span>
<% else %>
  <span style="color:black">No ratings yet</span>
<% end %>
