<%= "Average Rating: " %>
<% if @rateable.ratings.count > 0 %>
  <%= "#{number_with_precision @rateable.ratings.average(:value), precision: 2}" %>
  <% if logged_in? && @rateable.ratings.where(:user_id == current_user.id) %>
    <%= '(You rated this)' %>
  <% end %>
<% else %>
  <%= 'NONE' %>
<% end %>