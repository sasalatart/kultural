<%= content_tag "div", id: "user-rating", data: {
    url: url_for([rateable, @rating]),
    method: @rating.value ? 'PATCH' : 'POST',
    stars: @rating.value || 0 } do %>
  
  Rate it:

  <% if @rating.value.nil? %>
  <% 10.times do %>
  <%= fa_icon 'star-o' %>
  <% end %>
  <% else %>
  <% @rating.value.times do %>
  <%= fa_icon 'star' %>
  <% end %>
  <% (10 - @rating.value).times do %>
  <%= fa_icon 'star-o' %>
  <% end %>
  <% end %>
<% end %>