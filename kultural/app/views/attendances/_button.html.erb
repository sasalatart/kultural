<% if current_user.events_to_attend.include? event %>
  <%= button_to 'UnAttend',
                attendance_path(current_user.attendances.where(event_id: event.id).first(), event_id: event.id),
                method: :delete,
                class: 'button-del',
                remote: true %>
<% else %>
  <%= button_to 'Attend',
                {controller: "attendances", action: "create", event_id: event.id, user_id: current_user.id},
                method: :post,
                class: 'button-def',
                remote: true %>
<% end %>
