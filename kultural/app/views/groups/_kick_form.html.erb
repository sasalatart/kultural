<% # Assumes member as parameter %>
<% unless current_user == member %>
  <%= form_for(member.memberships.find_by(user_id: member.id, group_id: @group.id), html: {method: :delete}, remote: false) do |f| %>
      <div><%= hidden_field_tag :member_id, member.id %></div>
      <%= f.submit "Kick", class: ['button', 'button-del'] %>
  <% end %>
<% end %>