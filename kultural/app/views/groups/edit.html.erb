<h1 class="center-align">Edit <%= link_to @group.name , @group %></h1>
<%= render 'form' %>

<div class="form center">
  <fieldset class="borders">
    <legend>Delete group</legend>
    <div class="contents">
      <div class="field">
        <%= button_to 'Delete group', @group, method: :delete, data: { confirm: 'Are you sure?' }, class: ['button', 'button-del'] %>
      </div>
    </div>
  </fieldset>
</div>
