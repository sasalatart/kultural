<h1 class="center-align"> Groups </h1>
<% if logged_in? %>
  <%= button_to 'New group', new_group_path, method: :get, class: 'button-def' %>
<% end %>

<div class="table-container">
  <%= render 'shared/pagination', resource: @groups %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= render group %></td>
          <td class="text"><%= group.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render 'shared/pagination', resource: @groups %>
</div>
