<div class="container_center">
  <div class="center">

    <h2 class="center-align">Groups</h2>

    <div>
    <% if logged_in? %>
    <%= button_to 'New group', new_group_path, method: :get, class: 'button-def' %>
    <% end %>
    </div>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
        </tr>
      </thead>

      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= render group %></td>
            <td><%= group.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>