<% @title ||= 'Places' %>
<div> 
  <h1 class="center-align"> 
    <%= @title %> 
    <% unless @place.nil? %>
    <%= link_to @place.name, @place %>
    <% end %>
  </h1>
  <% if logged_in? %>
  <%= button_to 'New place', new_place_path,
  method: :get, class: 'button-def' %>
  <% end %>
</div>
<div class="table-container">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Address</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Owner</th>
      </tr>
    </thead>

    <tbody>
      <% @places.each do |place| %>
      <tr>
        <td><%= render place %></td>
        <td><%= place.description %></td>
        <td><%= place.address %></td>
        <td><%= place.lat %></td>
        <td><%= place.lon %></td>
        <td><%= render place.owner %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
